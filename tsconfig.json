{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",           // Critical for modern Node
    "moduleResolution": "NodeNext", // Critical for modern Node
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}